   });
   $('span').each(function(){
      if($(this).attr('id') == "descripSpan"){
         var str = $(this).html();
         str.replace(/\s+$/g,' ');
         var temp = '';
         for (var c=0; c<18; c++) {
            if(c < str.length){
               temp += str[c];
            }
         }
         $(this).replaceWith("<p>&nbsp;&nbsp;" + temp + "...</p>");
      }
  });
});
